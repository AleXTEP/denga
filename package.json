{
	"name": "denga",
	"version": "1.0.0",
	"description": "Agenda Dashboard",
	"main": "index.js",
	"scripts": {
		"build": "(rm -r built/) && tsc & (cd client && ng build)",
		"all": "npm run build && npm start",
		"start": "node ./built/app.js",
		"monitor": "tsc --watch & nodemon ./built/app.js"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [
			"client/**/*",
			"server"
		],
		"ext": "ts,json,html,css,scss",
		"exec": "npm run build && npm start"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Xalbi/denga.git"
	},
	"keywords": [
		"agenda", "dashboard"
	],
	"author": "xalbi",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/Xalbi/denga/issues"
	},
	"homepage": "https://github.com/Xalbi/denga#readme",
	"dependencies": {
		"@types/express": "^4.16.0",
		"@types/node": "^14.0.5",
		"agenda": "^3.1.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"reflect-metadata": "^0.1.13",
		"routing-controllers": "^0.7.7",
		"typescript": "^3.9.3"
	},
	"devDependencies": {
		"nodemon": "^2.0.4"
	}
}

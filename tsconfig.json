{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "allowJs": true,
        "outDir": "./built",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "typeRoots": [
          "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "./server/app.ts",
        "./server/src/**/*"
    ],
    "exclude": ["./node_modules"]
}
